<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/public/Css/forms.min.css">
</head>

<body>
  <%- include('./includes/header.ejs') %>
  <!-- Main -->
  <main class="container">
    <form method="POST" action="add-article" enctype="multipart/form-data">
      <input type="text" name="header" id="header" placeholder="عنوان المقالة*">
      <select name="category" id="category">
        <option value="" disabled>Category</option>
        <% categories.forEach(category => { %>
        <option value="<%= category %>"><%= category %></option>
        <% }) %>
      </select>
      <select name="tags" id="tags" multiple>
        <option value="" disabled>Choose tags</option>
        <% tags.forEach(tag => { %>
        <option value="<%= tag %>"><%= tag %></option>
        <% }) %>
      </select>
      <input type="file" name="articleImage" id="image">
      <textarea name="content" id="content" placeholder="الموضوع*"></textarea>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input type="submit" value="إرسال" class="btn btn-primary">
    </form>
  </main>
  <%- include('./includes/end.ejs') %>